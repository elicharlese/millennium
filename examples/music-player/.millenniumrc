{
	"build": {
		"distDir": "./dist/",
		"devPath": "http://localhost:7217/"
	},
	"millennium": {
		"bundle": {
			"active": true,
			"targets": "all",
			"identifier": "dev.millennium.music-player",
			"icon": [
				"../../.icons/32x32.png",
				"../../.icons/128x128.png",
				"../../.icons/256x256.png",
				"../../.icons/icon.ico"
			]
		},
		"systemTray": {
			"iconPath": "../../.icons/tray_icon.png",
			"iconAsTemplate": true
		},
		"allowlist": {
			"window": {
				"all": true
			}
		},
		"windows": [
			{
				"title": "Millennium Music Player",
				"width": 850,
				"height": 320,
				"resizable": false,
				"decorations": true,
				"fullscreen": false,
				"fileDropEnabled": true,
				"transparent": true,
				"titlebarHidden": true,
				"visible": false,
				"focus": true,
				"center": true
			}
		],
		"security": {
			"csp": {
				"default-src": "parcel.pyke.io millennium: 'self'"
			}
		}
	}
}
